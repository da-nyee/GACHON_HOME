<?xml version="1.0" encoding="utf-8"?>
<addon version="0.2">
	<title xml:lang="ko">E-mail filter</title>
	<version>1.0</version>
    <date>2012-09-18</date>
	<author email_address="test@test.com" link="http://yahoo.com" date="2012. 09. 18">
		<name xml:lang="ko">SDW</name>
		<description xml:lang="ko">지정된 이메일만 사용가능/불가능</description>
	</author>
	<extra_vars>
		<var name="emailHost" type="textarea">
			<title xml:lang="ko">이메일 호스트</title>
			<description xml:lang="ko">예) abc@def.com일 경우 def.com 입력 (여러개 입력때는 줄바꿈(엔터))
			소문자로만 입력</description>
		</var>
		<var name="y_or_n" type="select">
			<title xml:lang="ko">입력한 호스트 사용/제외</title>
			<description xml:lang="ko">입력한 이메일 호스트만 사용/제외</description>
			<options value="Y">
                <title xml:lang="ko">입력한 이메일 호스트만 사용</title>
			</options>
			<options value="N">
                <title xml:lang="ko">입력한 이메일 호스트만 제외</title>
			</options>
		</var>
	</extra_vars>
</addon>